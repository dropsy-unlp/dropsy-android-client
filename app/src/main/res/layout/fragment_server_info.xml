<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fuentesfernandez.dropsy.Fragment.ServerInfoFragment">


    <TextView
        android:text="Estado de la conexion: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/robot_list"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:text="Desconectado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connection_status"
        android:textSize="36sp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#b44d4d" />

    <TextView
        android:text="Robots disponibles:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/connection_status"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/connection_status"
        android:id="@+id/refresh"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/ic_sync_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/connection_status"
        android:layout_above="@+id/textView2" />

</RelativeLayout>
