    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="192.168.0.1"
        android:inputType="text"
        android:key="ip"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="IP del Servidor" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="8000"
        android:inputType="numberDecimal"
        android:key="port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Puerto" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="api"
        android:inputType="text"
        android:key="path"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Path" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="https://192.168.0.1:1234/dropsy.webm"
        android:inputType="text"
        android:key="stream_url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Url Stream de Video" />


