<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:key="streaming_active"
        android:title="Streaming activado" />

    <EditTextPreference
        android:defaultValue="2"
        android:inputType="numberDecimal"
        android:key="rotation_sensitivity"
        android:title="Sensibilidad de giro" />
    <EditTextPreference
        android:defaultValue="1"
        android:inputType="numberDecimal"
        android:key="speed"
        android:title="Velocidad de movimiento" />
</PreferenceScreen>
